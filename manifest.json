{
    "name": "RuliCuts",
    "version": "0.0.1",
    "description": "루리웹 수동 차단 플러그인",
    "manifest_version": 3,
    "icons": {
        "16": "/assets/icon-16.png",
        "32": "/assets/icon-32.png",
        "128": "/assets/icon-128.png"
    },
    "permissions": ["storage", "scripting"],
    "content_scripts": [
        {
          "matches": [ "*://*.ruliweb.com/*" ],
          "run_at": "document_end",
          "js": [ 
            "start.js"
           ]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["do_block.js"],
        "matches": [ "*://*.ruliweb.com/*" ]
    }]
}